<% layout('layout') -%>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <% if (message.length > 0) { %>
        <div class="alert alert-success alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= message %>
        </div>
      <% } %>
      <img class="img-circle img-responsive img-center" src="<%= user.profile.picture %>" alt="">
      <br/>
      <p>Name: <%= user.profile.name %> </p>
      <p>Email: <%= user.email %> </p>

      <% if(user.address === "" || typeof user.address ==="undefined") { %>
        <p>Address: Missing Address</p>
      <% } else { %>
        <p>Address: <%= user.address %></p>
      <% } %>
      <a href="/edit-profile" class="btn btn-primary btn-lg">Edit Profile</a>
    </div>
    <div class="row">
      <div class="col-md-6">
        <h2 class="text-center">History</h2>

        <table class="table table-striped sticky-header">
          <thead>
            <tr>
              <th>Item Name</th>
              <th>Payment Type:</th>
              <th>Paid:</th>
              <th>Date:</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i<user.history.length; i++) { %>
              <tr>
                <td><%= user.history[i].item.name %></td>
                <td class="<%= user.history[i].paymenttype %>"><%= user.history[i].paymenttype %></td>
                <td>$<%= user.history[i].paid %></td>
                <td><%= user.history[i].date %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
