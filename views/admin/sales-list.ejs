<% layout('layout') -%>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <th>Buyer</th>
    <th>Email</th>
    <th>Payment Type</th>
    <th>Product</th>
    <th>Amount</th>
    <th>Purchase Date</th>
    <th></th>
  </thead>
  <tbody>
    <% for(var x = 0; x<client.length; x++) { %>
        <% for(var i = 0; i<client[x].history.length; i++) { %>
          <form action="/refund" method="post">
          <tr>
              <td class="<%= client[x].history[i].paymenttype %>"><%= client[x].profile.name %></td>
              <td class="<%= client[x].history[i].paymenttype %>"><%= client[x].email %></td>
              <td class="<%= client[x].history[i].paymenttype %>"><%= client[x].history[i].paymenttype %></td>
              <td class="<%= client[x].history[i].paymenttype %>"><%= client[x].history[i].item.name %></td>
              <td class="<%= client[x].history[i].paymenttype %>">$<%= client[x].history[i].paid %></td>
              <td class="<%= client[x].history[i].paymenttype %>"><%= client[x].history[i].date %></td>
              <td>
                <input type="hidden" name="user_id" value="<%= client[x]._id %>"></input>
                <input type="hidden" name="name" value="<%= client[x].profile.name %>"></input>
                <input type="hidden" name="email" value="<%= client[x].email %>"></input>
                <input type="hidden" name="paymenttype" value="<%= client[x].history[i].paymenttype %>"></input>
                <input type="hidden" name="history_id" value="<%= client[x].history[i]._id %>"></input>
                <input type="hidden" name="item_name" value="<%= client[x].history[i].item.name %>"></input>
                <input type="hidden" name="item_id" value="<%= client[x].history[i].item._id %>"></input>
                <input type="hidden" name="creditcardname" value="<%= client[x].history[i].creditcardname %>"></input>
                <input type="hidden" name="creditcardcvc" value="<%= client[x].history[i].creditcardcvc %>"></input>
                <input type="hidden" name="creditcardnumber" value="<%= client[x].history[i].creditcardnumber %>"></input>
                <input type="hidden" name="paid" value="<%= client[x].history[i].paid %>"></input>
                <input type="hidden" name="date" value="<%= client[x].history[i].date %>"></input>
                <input type="hidden" name="charge" value="<%= client[x].history[i].charge %>"></input>
                <button class="btn btn-default <%= client[x].history[i].paymenttype %>" onclick="return confirm('Are you sure?')">Refund</button>
              </td>
          </tr>
          </form>
        <% } %>
    <% } %>
  </tbody>
</table>

<script>
function clicked(e)
{
  if(!confirm('Are you sure?')) {
    e.preventDefault();
  } else {
    this.style.visibility='hidden';
  }
}
</script>
